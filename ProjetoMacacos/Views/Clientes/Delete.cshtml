@model ProjetoMacacos.Models.Clientes

@{
    ViewData["Title"] = "Excluir Cliente";
}

<section class="delete-section">
    <h1 class="page-title">Excluir Cliente</h1>
    <p class="warning-text">Tem certeza de que deseja excluir este cliente? Essa ação não poderá ser desfeita.</p>

    <div class="delete-card">
        <h3 class="client-title">@Model.Nome</h3>
        <hr class="divider" />
        <dl class="row client-info">
            <dt class="col-sm-3">Nome:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Telefone:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

            <dt class="col-sm-3">Celular:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Celular)</dd>

            <dt class="col-sm-3">CPF:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>

            <dt class="col-sm-3">Data de Nascimento:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNacimento)</dd>

            <dt class="col-sm-3">Endereço:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereço)</dd>

            <dt class="col-sm-3">Bairro:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Bairro)</dd>

            <dt class="col-sm-3">Cidade:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cidade)</dd>
        </dl>

        <form asp-action="Delete" class="delete-form">
            <input type="hidden" asp-for="ClienteId" />
            <div class="button-group">
                <input type="submit" value="Confirmar Exclusão" class="btn-delete" />
                <a asp-action="Index" class="btn-cancel">Cancelar</a>
            </div>
        </form>
    </div>
</section>

<style>
    /* ======== GERAL ======== */
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .delete-section {
        max-width: 700px;
        margin: 70px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(255, 215, 0, 0.1);
    }

    .page-title {
        color: #FFD700;
        font-size: 2.3rem;
        text-align: center;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 1px;
        margin-bottom: 15px;
    }

    .warning-text {
        text-align: center;
        color: #ff4c4c;
        font-weight: 600;
        margin-bottom: 30px;
        font-size: 1rem;
    }

    /* ======== CARD DE INFORMAÇÕES ======== */
    .delete-card {
        background: rgba(255, 255, 255, 0.07);
        border-radius: 15px;
        padding: 25px;
    }

    .client-title {
        color: #FFD700;
        text-align: center;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .divider {
        border: 1px solid rgba(255, 215, 0, 0.3);
        margin-bottom: 20px;
    }

    .client-info dt {
        color: #FFD700;
        font-weight: 600;
        margin-bottom: 5px;
    }

    .client-info dd {
        color: #ddd;
        margin-bottom: 15px;
        word-wrap: break-word;
    }

    /* ======== BOTÕES ======== */
    .button-group {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 25px;
    }

    .btn-delete {
        background: #ff4c4c;
        color: #fff;
        padding: 12px 25px;
        border: none;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 0 15px rgba(255, 76, 76, 0.3);
    }

        .btn-delete:hover {
            background: #ff0000;
            transform: scale(1.05);
        }

    .btn-cancel {
        background: transparent;
        border: 1px solid #FFD700;
        color: #FFD700;
        padding: 12px 25px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            background: #FFD700;
            color: #000;
        }

  

    {
        padding: 25px;
    }

    .page-title {
        font-size: 1.8rem;
    }

    .button-group {
        flex-direction: column;
    }

    .btn-delete,
    .btn-cancel {
        width: 100%;
        text-align: center;
    }

    }
</style>
