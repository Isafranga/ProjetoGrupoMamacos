@model IEnumerable<ProjetoMacacos.Models.Clientes>

@{
    ViewData["Title"] = "Clientes";
}

<section class="clientes-section">
    <h1 class="clientes-title">Lista de Clientes</h1>

    <p class="clientes-btn-container">
        <a asp-action="Create" class="btn-card">Cadastrar Novo Cliente</a>
    </p>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.Celular)</th>
                    <th>@Html.DisplayNameFor(model => model.CPF)</th>
                    <th>@Html.DisplayNameFor(model => model.DataNacimento)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereço)</th>
                    <th>@Html.DisplayNameFor(model => model.Bairro)</th>
                    <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                        <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataNacimento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Endereço)</td>
                        <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                        <td class="acoes">
                            <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn-small editar">Editar</a>
                            
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn-small excluir">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<style>
    /* ======== SEÇÃO CLIENTES ======== */
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .clientes-section {
        padding: 50px;
        text-align: center;
    }

    .clientes-title {
        color: #FFD700;
        font-size: 2.2rem;
        font-weight: 800;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .clientes-btn-container {
        margin-bottom: 25px;
    }

    .btn-card {
        display: inline-block;
        background: #FFD700;
        color: #000;
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        transition: 0.3s;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }

        .btn-card:hover {
            background: #fff;
            transform: scale(1.05);
        }

    /* ======== TABELA ======== */
    .table-container {
        overflow-x: auto;
        margin-top: 30px;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        overflow: hidden;
    }

        .table-custom th,
        .table-custom td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 215, 0, 0.2);
        }

        .table-custom th {
            background-color: rgba(255, 215, 0, 0.15);
            color: #FFD700;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
        }

        .table-custom td {
            color: #fff;
            font-size: 0.95rem;
        }

        .table-custom tr:hover {
            background-color: rgba(255, 215, 0, 0.1);
            transition: 0.3s;
        }

    /* ======== BOTÕES ======== */
    .acoes {
        display: flex;
        justify-content: center;
        gap: 5px;
    }

    .btn-small {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.85rem;
        transition: 0.3s;
    }

        .btn-small.editar {
            background: #FFD700;
            color: #000;
        }

            .btn-small.editar:hover {
                background: #fff;
            }

        .btn-small.detalhes {
            background: transparent;
            border: 1px solid #FFD700;
            color: #FFD700;
        }

            .btn-small.detalhes:hover {
                background: #FFD700;
                color: #000;
            }

        .btn-small.excluir {
            background: #c82333;
            color: #fff;
        }

            .btn-small.excluir:hover {
                background: #dc3545;
            }

 

    {
        padding: 30px 10px;
    }

    .table-custom th,
    .table-custom td {
        font-size: 0.85rem;
        padding: 10px;
    }

    .btn-small {
        font-size: 0.8rem;
    }

    }
</style>
