@model ProjetoMacacos.Models.Clientes

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<section class="create-section">
    <h1 class="page-title">Cadastrar Cliente</h1>
    <p class="subtitle">Preencha os dados abaixo para registrar um novo cliente na HEINCAR.</p>

    <div class="form-card">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input asp-for="Nome" class="form-control" placeholder="Ex: João da Silva" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="exemplo@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Telefone</label>
                <input asp-for="Telefone" class="form-control" placeholder="(11) 1234-5678" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Celular" class="control-label">Celular</label>
                <input asp-for="Celular" class="form-control" placeholder="(11) 91234-5678" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CPF" class="control-label">CPF</label>
                <input asp-for="CPF" class="form-control" placeholder="000.000.000-00" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataNacimento" class="control-label">Data de Nascimento</label>
                <input asp-for="DataNacimento" type="date" class="form-control" />
                <span asp-validation-for="DataNacimento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Endereço" class="control-label">Endereço</label>
                <input asp-for="Endereço" class="form-control" placeholder="Rua Exemplo, 123" />
                <span asp-validation-for="Endereço" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro" class="control-label">Bairro</label>
                <input asp-for="Bairro" class="form-control" placeholder="Centro" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" placeholder="São Paulo" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="button-group">
                <input type="submit" value="Cadastrar" class="btn-submit" />
                <a asp-action="Index" class="btn-back">Voltar à Lista</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

