@model ProjetoMacacos.Models.Veiculo

@{
    ViewData["Title"] = "Detalhes do Veículo";
}

<section class="details-section">
    <div class="details-container">
        <div class="car-image">
            <!-- 📸 Imagem do carro -->
            <img src="@Url.Action("BuscarFoto", "Veiculoes1", new { id = Model.VeiculoId })"
                 class="img-thumbnail"
                 style="width: 600px; height: 450px; object-fit: cover;" />
        </div>

        <div class="car-info">
            <h1>@Model.Modelo</h1>   
            <p class="car-desc">
                Explore o luxo e a potência deste modelo exclusivo.
                Perfeito para viagens, eventos e experiências únicas de direção.
            </p>

            <hr />

            <ul class="car-details">
                <li><strong>Placa:</strong> @Model.Placa</li>
                <li><strong>Marca:</strong> @Model.Marca</li>
                <li><strong>Modelo:</strong> @Model.Modelo</li>
                <li><strong>Ano:</strong> @Model.Ano</li>
                <li><strong>Cor:</strong> @Model.Cor</li>
            </ul>

            <div class="btn-group">
                <a asp-action="Index" class="btn-secondary">Voltar à Lista</a>
            </div>
        </div>
    </div>
</section>

<style>
    /* ======== SEÇÃO DE DETALHES ======== */
    .details-section {
        background-color: #000;
        color: #fff;
        padding: 60px 10%;
        min-height: 85vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .details-container {
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
        max-width: 1100px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        border: 1px solid rgba(255, 215, 0, 0.2);
        box-shadow: 0 0 30px rgba(255, 215, 0, 0.1);
        padding: 40px;
    }

    /* ======== IMAGEM DO VEÍCULO ======== */
    .car-image {
        flex: 1 1 45%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .car-image img {
            width: 100%;
            border-radius: 15px;
            object-fit: cover;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
            border: 1px solid rgba(255, 215, 0, 0.3);
        }

    /* ======== INFORMAÇÕES DO VEÍCULO ======== */
    .car-info {
        flex: 1 1 45%;
    }

        .car-info h1 {
            font-size: 2.2rem;
            color: #FFD700;
            font-weight: 800;
            margin-bottom: 10px;
            text-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        }

    .car-desc {
        font-size: 1.1rem;
        color: #ccc;
        margin-bottom: 20px;
        line-height: 1.5;
    }

    .car-details {
        list-style: none;
        padding: 0;
        margin: 20px 0;
        font-size: 1rem;
    }

        .car-details li {
            margin-bottom: 10px;
            color: #eee;
        }

        .car-details strong {
            color: #FFD700;
        }

    /* ======== BOTÕES ======== */
    .btn-group {
        margin-top: 25px;
    }

    .btn-hero {
        display: inline-block;
        background: #FFD700;
        color: #000;
        padding: 12px 35px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        transition: 0.3s ease-in-out;
        border: none;
        cursor: pointer;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }

        .btn-hero:hover {
            background: #fff;
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

    .btn-secondary {
        display: inline-block;
        background: transparent;
        border: 1px solid #FFD700;
        color: #FFD700;
        padding: 12px 30px;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        margin-left: 10px;
        transition: 0.3s ease;
    }

        .btn-secondary:hover {
            background: #FFD700;
            color: #000;
        }



    {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .car-info h1 {
        font-size: 1.8rem;
    }

    .car-image img {
        max-width: 90%;
    }

    }
</style>
