@model ProjetoMacacos.Models.Veiculo

@{
    ViewData["Title"] = "Cadastro de Veiculos";
    var fotoUrl = !string.IsNullOrEmpty(Model.UrlFoto)
        ? Url.Action("BuscarFoto", "Veiculoes1", new { id = Model.VeiculoId })
        : Url.Content("~/img/sem-imagem.jpg");
}

<section class="rent-section">
    <div class="rent-container">
        <div class="rent-header">
            <h1>Reserve seu <span class="highlight"> @Model.Modelo</span></h1>
            <p>Preencha os dados abaixo para confirmar o aluguel do veículo.</p>
        </div>

        <div class="rent-content">
            <!-- ======== RESUMO DO CARRO ======== -->
            <div class="car-summary">
                <div class="col-3 text-center gap-3 mt-4">
                    <img id="fotoPreview" src="@fotoUrl" class="img-thumbnail img-fluid mb-2" style="max-height: 150px;" />
                    <form asp-action="Edit" asp-controller="Usuarios" method="post" enctype="multipart/form-data" id="formAlterarFoto">
                        <input type="hidden" name="id" value="@Model.VeiculoId" />
                        <input type="file" asp-for="UrlFoto" id="novaFotoInput" class="d-none" accept="image/*" />
                        <button type="button" class="btn btn-sm text-light w-100 mt-3" id="btnAlterarFoto"><i class="bi bi-camera"></i> Alterar Foto</button>
                    </form>
                </div>
                <ul>
                    <li><strong>Marca:</strong> @Model.Marca</li>
                    <li><strong>Modelo:</strong> @Model.Modelo</li>
                    <li><strong>Ano:</strong> @Model.Ano</li>
                    <li><strong>Cor:</strong> @Model.Cor</li>
                    <li><strong>Placa:</strong> @Model.Placa</li>
                </ul>

                <div class="price-box">
                    <p class="price-label">Valor do Aluguel</p>
                    <p class="price-value">R$ 350,00<span>/dia</span></p>
                </div>
            </div>

            <!-- ======== FORMULÁRIO ======== -->
            <div class="form-container">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="VeiculoId" />

                    <div class="form-group">
                        <label>Nome Completo</label>
                        <input type="text" class="form-control" placeholder="Digite seu nome" required />
                    </div>

                    <div class="form-group">
                        <label>CPF</label>
                        <input type="text" class="form-control" placeholder="Digite seu CPF" required />
                    </div>

                    <div class="form-group">
                        <label>Data de Retirada</label>
                        <input type="date" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Data de Devolução</label>
                        <input type="date" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label>Local de Retirada</label>
                        <input type="text" class="form-control" placeholder="Ex: Aeroporto, Centro, etc." required />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn-hero">Confirmar Aluguel</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="back-link">
            <a asp-action="Index" class="btn-secondary">Voltar à Lista</a>
        </div>
    </div>
</section>

