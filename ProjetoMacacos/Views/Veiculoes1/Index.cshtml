@model IEnumerable<ProjetoMacacos.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

<section class="cars-section">
    <h1>Lista de Veículos</h1>

    <p>
        <a asp-action="Create" class="btn-hero">Cadastrar Novo Veículo</a>
    </p>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.UrlFoto)</th>
                    <th>@Html.DisplayNameFor(model => model.Placa)</th>
                    <th>@Html.DisplayNameFor(model => model.Modelo)</th>
                    <th>@Html.DisplayNameFor(model => model.Marca)</th>
                    <th>@Html.DisplayNameFor(model => model.Ano)</th>
                    <th>@Html.DisplayNameFor(model => model.Cor)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.UrlFoto))
                            {
                                <img src="@Url.Action("BuscarFoto", "Veiculoes1", new { id = item.VeiculoId })"
                                     class="img-thumbnail"
                                     style="width: 100px; height: 75px; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="~/img/sem-imagem.jpg" alt="Sem Capa" class="img-thumbnail" style="width: 50px; height: 75px; object-fit: cover;" />
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Placa)</td>
                        <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ano)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cor)</td>
                        <td class="acoes">
                            <a asp-controller="Registros" asp-action="Create" asp-route-veiculoId="@item.VeiculoId" class="btn-small editar">Alugar</a>
                            <a asp-action="Details" asp-route-id="@item.VeiculoId" class="btn-small detalhes">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.VeiculoId" class="btn-small excluir">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<style>
    /* ======== SEÇÃO DE VEÍCULOS ======== */
    .cars-section {
        padding: 60px 40px;
        text-align: center;
        background-color: #000;
        color: #fff;
    }

        .cars-section h1 {
            font-size: 2.5rem;
            font-weight: 800;
            color: #FFD700;
            margin-bottom: 30px;
            text-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
            letter-spacing: 1px;
            text-transform: uppercase;
        }

    /* ======== BOTÃO HERO (PADRÃO HEINCAR) ======== */
    .btn-hero {
        display: inline-block;
        background: #FFD700;
        color: #000;
        padding: 14px 40px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        transition: 0.3s ease-in-out;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }

        .btn-hero:hover {
            background: #fff;
            color: #000;
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

    /* ======== TABELA DE VEÍCULOS ======== */
    .table-container {
        overflow-x: auto;
        margin-top: 30px;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        overflow: hidden;
    }

        .table-custom th,
        .table-custom td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid rgba(255, 215, 0, 0.2);
        }

        .table-custom th {
            background-color: rgba(255, 215, 0, 0.15);
            color: #FFD700;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 700;
        }

        .table-custom td {
            color: #fff;
            font-size: 0.95rem;
        }

        .table-custom tr:hover {
            background-color: rgba(255, 215, 0, 0.1);
        }

    /* ======== BOTÕES PEQUENOS ======== */
    .btn-small {
        display: inline-block;
        margin: 2px;
        padding: 6px 14px;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.85rem;
        transition: 0.3s;
    }

        .btn-small.editar {
            background: #FFD700;
            color: #000;
        }

            .btn-small.editar:hover {
                background: #fff;
            }

        .btn-small.detalhes {
            background: transparent;
            border: 1px solid #FFD700;
            color: #FFD700;
        }

            .btn-small.detalhes:hover {
                background: #FFD700;
                color: #000;
            }

        .btn-small.excluir {
            background: #c82333;
            color: #fff;
        }

            .btn-small.excluir:hover {
                background: #dc3545;
            }
</style>
