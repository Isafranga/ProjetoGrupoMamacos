@{
    ViewData["Title"] = "Meus Dados";
}

<section class="hero-home">
    <div class="container-1">
        <h1>
            Alugue seu carro dos <span class="highlight">Sonhos</span>
        </h1>
        <p>Luxo, velocidade e conforto — a qualquer hora, em qualquer lugar.</p>

        <a class="btn-hero" asp-area="Identity" asp-page="/Account/Login">
            Entrar
        </a>
    </div>
</section>

<style>
    /* ======== HERO HOME ======== */
    .hero-home {
        background: url('https://images.unsplash.com/photo-1503376780353-7e6692767b70?auto=format&fit=crop&w=1600&q=80') center/cover no-repeat;
        height: 75vh; /* ocupa 75% da tela */
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        text-align: center;
        color: #fff;
        margin: 0;
    }

        .hero-home::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 0, 0, 0.85);
            z-index: 1;
        }

    .container-1 {
        position: relative;
        z-index: 2;
        text-align: center;
        max-width: 800px;
        padding: 20px;
        animation: fadeIn 1.5s ease-in-out;
    }

        .container-1 h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 15px;
            text-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        }

    .highlight {
        color: #FFD700;
        font-weight: 800;
    }

    .container-1 p {
        font-size: 1.3rem;
        color: #ddd;
        margin-bottom: 40px;
        font-weight: 300;
    }

    .btn-hero {
        display: inline-block;
        background: #FFD700;
        color: #000;
        padding: 14px 40px;
        border-radius: 30px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        text-decoration: none;
        transition: 0.3s ease-in-out;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }

        .btn-hero:hover {
            background: #fff;
            transform: scale(1.05);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

</style>
