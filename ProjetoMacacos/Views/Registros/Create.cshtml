@model ProjetoMacacos.Models.Registros

@{
    ViewData["Title"] = "Registrar Nova Locação";

    var veiculo = ViewBag.VeiculoSelecionado as ProjetoMacacos.Models.Veiculo;
    var fotoUrl = veiculo != null && !string.IsNullOrEmpty(veiculo.UrlFoto)
        ? Url.Action("BuscarFoto", "Registros", new { id = veiculo.VeiculoId })
        : Url.Content("~/img/sem-imagem.jpg");
}

<section class="create-section">
    <h1 class="page-title">Registrar Nova Locação</h1>
    <p class="subtitle">
        Defina as <span class="gold">datas</span> de retirada e devolução para o veículo escolhido.<br />
        A locação será associada automaticamente ao <span class="gold">usuário logado</span>.
    </p>

    @if (veiculo != null)
    {
        <div class="car-info">
            <img src="@fotoUrl" alt="Imagem do veículo" class="car-image" />

            <div class="car-details">
                <h3>@veiculo.Marca @veiculo.Modelo</h3>
                <p>@veiculo.Placa • Ano: @veiculo.Ano • Cor: @veiculo.Cor</p>
            </div>
        </div>
    }

    <div class="form-container">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="VeiculoId" value="@veiculo?.VeiculoId" />

            <div class="form-group">
                <label asp-for="DataRetirada">Data de Retirada</label>
                <input asp-for="DataRetirada" class="form-control" type="date" />
                <span asp-validation-for="DataRetirada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataDevolucao">Data de Devolução</label>
                <input asp-for="DataDevolucao" class="form-control" type="date" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>

            <div class="btn-container">
                <input type="submit" value="Confirmar Locação" class="btn-submit" />
                <a asp-controller="Registros" asp-action="Index" class="btn-back">Voltar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .gold {
        color: #FFD700;
        font-weight: 600;
    }

    .create-section {
        padding: 60px 10%;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
    }

    .page-title {
        color: #FFD700;
        font-size: 2.2rem;
        font-weight: 800;
        text-transform: uppercase;
    }

    .subtitle {
        color: #ccc;
        margin-top: 10px;
        margin-bottom: 40px;
        font-size: 1rem;
    }

    /* ==== Carro e informações ==== */
    .car-info {
        text-align: center;
        margin-bottom: 30px;
    }

    .car-image {
        width: 100%;
        max-width: 600px;
        height: auto;
        border: 2px solid #FFD700;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.4);
        margin-bottom: 15px;
    }

    .car-details h3 {
        color: #FFD700;
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .car-details p {
        font-size: 1rem;
        color: #ddd;
    }

    /* ==== Formulário ==== */
    .form-container {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 215, 0, 0.2);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.1);
        text-align: left;
    }

    label {
        font-weight: 600;
        color: #FFD700;
    }

    .form-control {
        background-color: #111;
        color: #fff;
        border: 1px solid #444;
        border-radius: 8px;
        padding: 10px;
        width: 100%;
    }

        .form-control:focus {
            border-color: #FFD700;
            box-shadow: 0 0 5px rgba(255, 215, 0, 0.4);
        }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-submit {
        background-color: #FFD700;
        color: #000;
        font-weight: 700;
        border: none;
        padding: 10px 25px;
        border-radius: 30px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-submit:hover {
            transform: scale(1.05);
            background-color: #ffcc00;
        }

    .btn-back {
        color: #FFD700;
        font-weight: 600;
        align-self: center;
        text-decoration: none;
    }

        .btn-back:hover {
            color: #fff;
        }
</style>
