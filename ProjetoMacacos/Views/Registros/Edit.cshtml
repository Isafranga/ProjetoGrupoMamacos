@model ProjetoMacacos.Models.Registros

@{
    ViewData["Title"] = "Editar Registro de Locação";
}

<section class="edit-section">
    <h1 class="page-title">Editar Registro de Locação</h1>
    <p class="subtitle">
        Atualize as informações da <span class="gold">locação</span>, alterando o cliente, veículo ou as datas conforme necessário.
    </p>

    <div class="form-container">
        <form asp-action="Edit" class="styled-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegistroId" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Cliente</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label">Veículo</label>
                <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.VeiculoId">
                    <option value="">Selecione o veículo</option>
                </select>
                <span asp-validation-for="VeiculoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataRetirada" class="control-label">Data de Retirada</label>
                <input asp-for="DataRetirada" class="form-control" type="date" />
                <span asp-validation-for="DataRetirada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataDevolucao" class="control-label">Data de Devolução</label>
                <input asp-for="DataDevolucao" class="form-control" type="date" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>

            <div class="btn-container">
                <input type="submit" value="Salvar Alterações" class="btn-submit" />
                <a asp-action="Index" class="btn-back">Voltar</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

