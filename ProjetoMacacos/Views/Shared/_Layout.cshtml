<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HEINCAR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoMacacos.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- ======== CABEÇALHO ======== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HEINCAR</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Veiculoes1" asp-action="Index">Veículos</a>
                        </li>   
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Registros" asp-action="Index">Registros</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- ======== CONTEÚDO ======== -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- ======== RODAPÉ ======== -->
    <footer class="footer-main">
        <div class="footer-line"></div>
        <p>&copy; 2025 - HEINCAR | Todos os direitos reservados.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* ======== GERAL ======== */
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        /* ======== NAVBAR ======== */
        .navbar {
            background: rgba(0, 0, 0, 0.95);
            border-bottom: 1px solid rgba(255, 215, 0, 0.2);
            padding: 15px 30px;
        }

        .navbar-brand {
            color: #FFD700 !important;
            font-weight: 800;
            font-size: 1.8rem;
            letter-spacing: 1px;
            text-decoration: none;
            transition: 0.3s;
        }

            .navbar-brand:hover {
                color: #fff !important;
                transform: scale(1.05);
            }

        .nav-link {
            font-weight: 500;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #FFD700 !important;
            }

        /* ======== RODAPÉ ======== */
        .footer-main {
            text-align: center;
            background-color: #000;
            color: #aaa;
            padding: 3px 0;
            position: center;
        }

        /* Linha branca acima do rodapé */
        .footer-line {
            width: 100%;
            height: 2px;
            background-color: #fff; /* linha branca */
            margin-bottom: 15px;
        }
    </style>
</body>
</html>
