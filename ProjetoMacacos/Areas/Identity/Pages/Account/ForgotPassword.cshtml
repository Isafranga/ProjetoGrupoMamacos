@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<h1>@ViewData["Title"]</h1>
<h2>Informe seu e-mail para redefinir a senha.</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                <label asp-for="Input.Email" class="form-label">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Redefinir Senha</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #000; /* Preto */
        color: #FFD700; /* Amarelo dourado */
        font-family: 'Poppins', sans-serif;
        text-align: center;
    }

    h1, h2 {
        color: #FFD700;
        margin-bottom: 10px;
    }

    .row {
        display: flex;
        justify-content: center;
        margin-top: 40px;
    }

    .col-md-4 {
        background-color: #111;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        width: 400px;
    }

    .form-floating label {
        color: #FFD700;
    }

    .form-control {
        background-color: #222;
        color: #FFD700;
        border: 1px solid #FFD700;
    }

        .form-control:focus {
            background-color: #333;
            border-color: #FFD700;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.6);
            color: #FFD700;
        }

    .btn-primary {
        background-color: #FFD700;
        color: #000;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #e6c200;
            color: #000;
            transform: scale(1.03);
        }

    .text-danger {
        color: #ff4d4d !important;
    }

    hr {
        border-color: #FFD700;
    }
</style>