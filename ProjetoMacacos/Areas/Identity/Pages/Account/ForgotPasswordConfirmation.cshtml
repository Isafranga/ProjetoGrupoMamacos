@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Confirmação de redefinição de senha";
}

<div class="confirmation-box">
    <h1>@ViewData["Title"]</h1>
    <p>Verifique seu e-mail para redefinir sua senha.</p>

    <a href="/Identity/Account/Login" class="btn-voltar">Voltar ao Login</a>
</div>


<style>
    body {
        background-color: #000; /* Fundo preto */
        color: #FFD700; /* Texto amarelo dourado */
        font-family: 'Poppins', sans-serif;
        text-align: center;
        margin-top: 100px;
    }

    h1 {
        color: #FFD700;
        margin-bottom: 20px;
    }

    p {
        color: #fff;
        font-size: 1.1rem;
        margin-bottom: 40px;
    }

    .confirmation-box {
        background-color: #111;
        display: inline-block;
        padding: 40px 60px;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
    }

    .btn-voltar {
        background-color: #FFD700;
        color: #000;
        border: none;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-voltar:hover {
            background-color: #e6c200;
            transform: scale(1.05);
            color: #000;
        }
</style>