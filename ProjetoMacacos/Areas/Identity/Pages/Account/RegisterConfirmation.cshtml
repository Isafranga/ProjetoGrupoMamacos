@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="confirmation-box">
    <h1>@ViewData["Title"]</h1>

    @{
        if (Model.DisplayConfirmAccountLink)
        {
            <p>
                Este aplicativo não possui um serviço de e-mail configurado.
                Consulte <a href="https://aka.ms/aspaccountconf" target="_blank">esta documentação</a> para configurar um remetente de e-mail real.
                Normalmente, você receberia um e-mail com este link:
                <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>.
            </p>
        }
        else
        {
            <p>Verifique seu e-mail para confirmar sua conta.</p>
        }
    }

    <a href="/Identity/Account/Login" class="btn-voltar">Voltar ao Login</a>
</div>

<style>
    body {
        background-color: #000; /* Fundo preto */
        color: #FFD700; /* Texto amarelo */
        font-family: 'Poppins', sans-serif;
        text-align: center;
        margin-top: 100px;
    }

    h1 {
        color: #FFD700;
        margin-bottom: 20px;
    }

    p {
        color: #fff;
        font-size: 1.1rem;
        margin-bottom: 25px;
    }

    a {
        color: #FFD700;
        text-decoration: underline;
        font-weight: bold;
        transition: 0.3s;
    }

        a:hover {
            color: #e6c200;
            text-decoration: none;
        }

    .confirmation-box {
        background-color: #111;
        display: inline-block;
        padding: 40px 60px;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        max-width: 700px;
    }

    .btn-voltar {
        display: inline-block;
        margin-top: 20px;
        background-color: #FFD700;
        color: #000;
        border: none;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-voltar:hover {
            background-color: #e6c200;
            transform: scale(1.05);
            color: #000;
        }
</style>