@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmação de e-mail";
}

<div class="confirmation-box">
    <div class="icon">📧</div>
    <h1>@ViewData["Title"]</h1>

    <div class="status-message">
        <p>Obrigado por confirmar seu e-mail</p>
    </div>

    <a href="/Identity/Account/Login" class="btn-voltar">Voltar ao Login</a>
</div>

<style>
    body {
        background-color: #000; /* Fundo preto */
        color: #FFD700; /* Texto amarelo dourado */
        font-family: 'Poppins', sans-serif;
        text-align: center;
        margin-top: 100px;
    }

    h1 {
        color: #FFD700;
        margin-bottom: 20px;
    }

    .confirmation-box {
        background-color: #111;
        display: inline-block;
        padding: 40px 60px;
        border-radius: 20px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        max-width: 700px;
    }

    .status-message {
        font-size: 1.1rem;
        color: #fff;
        margin-top: 15px;
    }

    .btn-voltar {
        display: inline-block;
        margin-top: 25px;
        background-color: #FFD700;
        color: #000;
        border: none;
        padding: 10px 25px;
        border-radius: 10px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-voltar:hover {
        background-color: #e6c200;
        transform: scale(1.05);
        color: #000;
    }

    .icon {
        font-size: 3rem;
        color: #FFD700;
        margin-bottom: 15px;
    }
</style>
