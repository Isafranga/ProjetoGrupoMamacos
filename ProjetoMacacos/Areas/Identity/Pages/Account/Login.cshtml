@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<div class="login-container">

    <!-- LADO ESQUERDO -->
    <div class="login-left">

        <!-- IMAGEM -->
        <div class="login-image-placeholder">
            <img src="/img/1.png" alt="Alternate Text" class="imagem" width="500" height="450" />
        </div>
    </div>

    <!-- LADO DIREITO -->
    <div class="login-right">
        <div class="login-card">
            <h1 class="text-center mb-3 text-white">@ViewData["Title"]</h1>

            <section class="Telalogin">
                <form id="account" method="post">
                    <h2 class="text-muted text-center">Digite suas credenciais para fazer login.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="email form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Senha</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceu sua senha?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar uma nova conta</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar Email de confirmação</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* ===== CONTAINER PRINCIPAL ===== */
    .login-container {
        display: flex;
        height: 100vh;
        background-color: #000;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    /* ===== LADO ESQUERDO ===== */
    .login-left {
        flex: 1;
