        transition: all 0.3s ease;
        box-shadow: none;
    }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6); /* placeholder mais suave */
        }

        .form-control:focus {
            background-color: #000; /* mantém o fundo preto */
            border-color: #FFD700; /* destaque dourado ao focar */
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
            color: #fff;
        }

    label, .form-label {
        color: #FFD700; /* mantém as labels douradas */
    }


    /* ===== CHECKBOX ===== */
    .checkbox label {
        color: #ccc;
        font-size: 0.95rem;
    }

    .form-check-input {
        margin-right: 8px;
        accent-color: #FFD700;
    }

    /* ===== BOTÃO ===== */
    .btn-primary {
        background: linear-gradient(90deg, #FFD700, #ffea7a);
        color: #000;
        border: none !important;
        border-radius: 25px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px;
        box-shadow: 0 0 15px rgba(255, 215, 0, 0.3);
        transition: all 0.3s ease;
        text-align: center;
    }

        .btn-primary:hover {
            background: #fff;
            transform: scale(1.05);
            box-shadow: 0 0 25px rgba(255, 215, 0, 0.5);
        }

    /* ===== LINKS ===== */
    .mt-3 a {
        color: #FFD700;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
    }

        .mt-3 a:hover {
            color: #fff;
            text-shadow: 0 0 8px #FFD700;
        }

   

    {
        flex-direction: column;
    }

    .login-left, .login-right {
        flex: 1;
        border-right: none;
        border-bottom: 2px solid #FFD700;
    }

    .login-image-placeholder {
        height: 200px;
    }

    }
</style>
